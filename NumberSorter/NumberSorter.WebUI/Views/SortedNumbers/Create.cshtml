@using NumberSorter.Common.Models

@model SortedNumbersViewModel;

@{
    ViewData["Title"] = "Create New List of Sorted Numbers";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="SortedNumbers" asp-action="Create" method="post">
    <div>
        <label asp-for="InitialValues">Enter numbers (comma-separated):</label>
        <input asp-for="InitialValues" />
        <span asp-validation-for="InitialValues" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="IsAscending">Select order:</label>
        <select asp-for="IsAscending">
            <option value="True">Ascending</option>
            <option value="False">Descending</option>
        </select>
    </div>
    <button type="submit">Sort</button>
</form>