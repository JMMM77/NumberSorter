@using NumberSorter.Common.Models

@model SortedNumbersViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details for sorted number list</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Initial Values</dt>
    <dd class="col-sm-10">@Model.InitialValues</dd>

    <dt class="col-sm-2">Sorted Values</dt>
    <dd class="col-sm-10">@string.Join(",", @Model.SortedValues)</dd>

    <dt class="col-sm-2">Ordered By</dt>
    <dd class="col-sm-10">@(Model.IsAscending ? "Ascending" : "Descending")</dd>

    <dt class="col-sm-2">Sort Time</dt>
    <dd class="col-sm-10">@Model.SortTime</dd>
</dl>

<div>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" asp-controller="SortedNumbers" class="btn btn-secondary">Back to List</a>
</div>
